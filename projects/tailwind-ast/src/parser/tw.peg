@export
TwParser = {statements:TwStatementNode} $;


TwStatementNode =
	  @:GroupNode
	| @:InstructNode
	;

GroupNode = head:InstructNode [Hyphen] '(' {statements:TwStatementNode} ')' [important:Important];

InstructNode = [pseudo:IdentifierNode Pseudo] instructs:IdentifierNode {Hyphen instructs:IdentifierNode} [important:Important];

@string
Pseudo = ':' | '::';

Hyphen = '-';

Important = '!';

@extern(crate::eat_css_class)
IdentifierNode;


Dot = '.' | '。';


Split = ';' | ',' | '，';